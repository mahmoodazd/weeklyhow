<div class="w-full py-6 px-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <a href="{{ product.url }}">
            {% if product.featured_image %}
                <div class="h-80 overflow-hidden">
                    <img class="w-full h-full object-cover transform hover:scale-105 transition duration-700 ease-in-out" src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}">
                </div>
            {% else %}
                <div class="h-80 overflow-hidden">
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100 transform hover:scale-105 transition duration-700 ease-in-out' }}
                </div>
            {% endif %}  
        </a>
        
        <div class="flex flex-col p-4">
            <span class="text-sm text-gray-400">
                {% if section.settings.show_vendor %}
                    {{ product.vendor }}
                {% endif %}
            </span>

            <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>

            <p class="text-gray-500">{{ product.price | money}}</p>
        </div>
        
    </div>
</div>